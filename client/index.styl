:root {
  --main-color: #5ea3d0;
  --secondary-color: white;
  --main-text-color: #3e5869;
  --secondary-text-color: #b0c7d6;
  --send-message-form: #f5f5f5;
  --warning-color: #b30000;
}

html,
body
  height 100%
  margin 0
  padding 0
  font-family system-ui
  font-weight 200
  color #3e5869
form
  margin 0

#root
  height 100%

.app
  display grid
  height 100%
  grid-template-columns repeat(6, 1fr)
  grid-template-rows 1fr 1fr 1fr 1fr 1fr 60px
  grid-template-areas 'r m m m m m'\
                      'r m m m m m'\
                      'u m m m m m'\
                      'u m m m m m'\
                      'u m m m m m'\
                      'n s s s s s'

.online-users
  grid-area u
  overflow scroll

.room-list
  grid-area r
  overflow-y scroll
  border-bottom 1px solid var(--secondary-color)
  ul > .active
    a
      color lime

.room-list,
.online-users
  box-sizing border-box
  padding 10px
  background-color var(--main-color)
  height 100%
  & > ul
    list-style-type none
    padding 0
    overflow scoll
  li
    display flex
    margin 10px 0
  & > h3
    margin 5px 0
    color var(--secondary-color)
  .room,
  .user
    a
      display flex
      align-items center
      color var(--secondary-color)
      font-weight 400
      text-decoration none
      .status 
        margin-right 5px
      .online
        color lime
   .selected
     a
      font-weight 600
      color lime

.new-room-form
  grid-area n
  display flex;
  align-items: center
  padding 0 5px
  background var(--secondary-color)
  color var(--main-text-color)
  form
    flex-grow 1
    display flex
    justify-content space-between
    align-items center
  input
    width 100%
    padding 15px 0
    background var(--secondary-color)
    border 0
    &::placeholder
      color var(--main-text-color)
      font-weight 200
    &:focus
      outline-width 0
  button
    background var(--secondary-color)
    color var(--main-text-color)
    cursor pointer
    border 0
    border 0

.message-list
  grid-area m
  display flex
  flex-direction column
  box-sizing border-box
  padding-left 6px
  width 100%
  height 100%
  overflow scroll
  background var(--secondary-color)
  .join-room
    display: flex;
    justify-content: center;
    height: 100%;
    font-size: 34px;
    font-weight: 300;

.send-message-form
  grid-area s
  background var(--send-message-form)
  display flex
  input
    width 100%
    padding 15px 10px
    margin 0
    border-style none
    background var(--send-message-form)
    font-weight 200
    &:focus
      outline-width 0
    &::placeholder
      color var(--main-text-color)

.message
  display flex
  flex-direction column
  align-items flex-start
  margin 30px 5px
  .message-username
    font-size 11px
    color var(--main-text-color)
    opacity 0.9
    margin-bottom 6px
  .message-text
    background var(--main-color)
    color var(--secondary-color)
    display inline
    padding 4px 8px
    border-radius 8px

.right
  align-items flex-end
  .message-username
    align-self flex-end

.help-text
  position absolute
  top 10px

.username-input
  position absolute
  top calc(50% - 80px)
  left calc(50% - 15vw)
  display flex
  flex-direction column
  align-items center
  justify-content space-around
  height 30vh
  width 30vw
  border 1px solid var(--main-text-color)
  color var(--main-text-color)
  h2
    color  --main-text-color
    margin-bottom 0
  input
    width 20vw
    height 40px
    margin-bottom 20px
    padding-left 5px
    font-size 26px
    text-align: center
    color var(--main-text-color)
    border: none
    border-bottom 1px solid var(--main-text-color)
    box-shadow none
    &:focus
      outline-width 0

.message-type
  background #cccccc
  margin 30px 5px
  padding 4px 8px
  display inline
  border-radius 8px
  max-width 10vw

.type
  padding 0
  margin 0
  overflow hidden
  white-space nowrap
  animation type 1s infinite
  color var(--secondary-color)
  font-weight 400

@keyframes type
	to
		width: 120;

	from
		width: 0;
